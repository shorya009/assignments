(CATEGORY)
INSERT INTO category VALUES('5','philosophy');
UPDATE category SET name='technology' WHERE id='5';
DELETE FROM category WHERE id='5';  

(USER)
INSERT INTO `user` ( `role`,`name`) VALUES ('normal','User5');
UPDATE `user` SET `role`='admin' WHERE `id`='5';
DELETE FROM `user` WHERE `id`=5; 

(ARTICLE)
INSERT INTO `article` (`user_id`,`description`,`category_id`) VALUES ('4', 'it is category 3 article on scienceee',3);

UPDATE `article` SET `description` = 'it is category 3 article on science aluminium is malleable' WHERE `article`.`id` = '6';

DELETE FROM `article` WHERE `id`= 6;


(COMMENTS)
INSERT INTO `comments` (`article_id`,`user_id`, `description`) VALUES ('1','3', 'great article');

UPDATE `comments` SET `description` = 'great article excellent' WHERE `comments`.`id` = '6';

DELETE FROM `comments` WHERE `id`= 6;


Ans2

SELECT article.`id`,article.`description`,user.`id`,user.`name` 
FROM article
INNER JOIN user
ON article.`user_id` = user.`id`
WHERE user.`name` = 'User3'


Ans3
SELECT article.`id`,article.`description`,user.id,user.name,comments.id,comments.description 
FROM article
INNER JOIN user
ON article.user_id = user.id
LEFT JOIN comments
ON comments.article_id = article.id
WHERE user.name = 'User3'


Ans3 using subquery

select comments.article_id,comments.id,comments.description
FROM comments
WHERE article_id IN
(SELECT article.`id`
FROM article
INNER JOIN user
ON article.user_id = user.id
WHERE user.name = 'User3')

Ans 4
SELECT DISTINCT article.`id`,article.`description`
FROM article
LEFT JOIN comments
ON comments.article_id = article.id
WHERE comments.id IS NULL

Ans4 using subquery
SELECT article.id,article.description 
FROM article
WHERE article.id NOT IN
(SELECT DISTINCT comments.article_id
FROM comments)

Ans5
SELECT COUNT(comments.`id`) as "mycount",article.`id` as "Article_id",article.`description` as "Article_Description" 
FROM article
LEFT JOIN comments
ON comments.article_id = article.id
GROUP BY(article.`id`)
ORDER by mycount DESC LIMIT 1

Ans6
SELECT article.id,article.`description`
FROM article
LEFT JOIN comments
ON comments.article_id = article.id
WHERE comments.id IS NOT NULL
GROUP BY article.id
HAVING COUNT(comments.id) = COUNT(DISTINCT comments.user_id)




