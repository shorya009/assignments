(CATEGORY)
INSERT INTO category VALUES('5','philosophy');
UPDATE category SET name='technology' WHERE id='5';
DELETE FROM category WHERE id='5';  

(USER)
INSERT INTO `user` ( `role`,`name`) VALUES ('normal','User5');
UPDATE `user` SET `role`='admin' WHERE `id`='5';
DELETE FROM `user` WHERE `id`=5; 

(ARTICLE)
INSERT INTO `article` (`user_id`,`article_description`,`category_id`) VALUES ('4', 'it is category 3 article on scienceee',3);

UPDATE `article` SET `article_description` = 'it is category 3 article on science aluminium is malleable' WHERE `article`.`id` = '6';

DELETE FROM `article` WHERE `id`= 6;


(COMMENTS)
INSERT INTO `comments` (`article_id`,`comment_by_user`, `comment_description`) VALUES ('1','3', 'great article');

UPDATE `comments` SET `comment_description` = 'great article excellent' WHERE `comments`.`id` = '6';

DELETE FROM `comments` WHERE `id`= 6;


Ans2

SELECT article.`id`,article.`article_description`,user.`id`,user.`name` 
FROM article
INNER JOIN user
ON article.`user_id` = user.`id`
WHERE user.`name` = 'User3'


Ans3
SELECT article.`id`,article.`article_description`,user.id,user.name,comments.id,comments.comment_description 
FROM article
INNER JOIN user
ON article.user_id = user.id
LEFT JOIN comments
ON comments.article_id = article.id
WHERE user.name = 'User3'


Ans3 using subquery

select comments.article_id,comments.id,comments.comment_description
FROM comments
WHERE article_id IN
(SELECT article.`id`
FROM article
INNER JOIN user
ON article.user_id = user.id
WHERE user.name = 'User3')

Ans 4
SELECT DISTINCT article.`id`,article.`article_description`
FROM article
LEFT JOIN comments
ON comments.article_id = article.id
WHERE comments.id IS NULL

Ans4 using subquery
SELECT article.id,article.article_description 
FROM article
WHERE article.id NOT IN
(SELECT DISTINCT comments.article_id
FROM comments)

Ans5
SELECT COUNT(comments.`id`) as "mycount",article.`id` as "Article_id",article.`article_description` as "Article_Description" 
FROM article
LEFT JOIN comments
ON comments.article_id = article.id
GROUP BY(article.`id`)
ORDER by mycount DESC LIMIT 1

Ans6
SELECT article.id,article.`article_description`
FROM article
LEFT JOIN comments
ON comments.article_id = article.id
WHERE comments.id IS NOT NULL
GROUP BY article.id
HAVING COUNT(comments.id) = COUNT(DISTINCT comments.comment_by_user)



CREATE INDEX i1 ON user(id)
CREATE INDEX i2 ON user(name)

CREATE INDEX i3 ON category(id);
CREATE INDEX i4 ON category(name);


CREATE INDEX i5 ON article(id);
CREATE INDEX i6 ON article(user_id);
CREATE INDEX i7 ON article(category_id);


CREATE INDEX i5 ON comments(id);
CREATE INDEX i6 ON comments(comment_by_user);
CREATE INDEX i7 ON comments(article_id);
