employees table--				
id	integer (255) not null auto_increment			
name varchar(255) not null			
primary key(id)			
				
				
assets table ---				
id integer(255) not null auto_increment				
name varchar(255) not null				
category name varchar(255) not null				
model number varchar(255) not null				
price integer(255) not null				
date of purchase date not null				
warrenty end date date not null				
active enum(1,0)				
location varchar(255)				
primary key(id)	

				
allotments tabel ----				
id integer(255) not null auto_increment				
asset_id integer(255) not null 				
employee_id integer(255) not null				
start_date date not null				
end_date date
primary key(id)
foreign key(asset_id) references assests(id)
foreign key(employee_id) references employees(id)
				
repair_assets table ---				
id integer(255) not null auto_increment				
asset_id integer(255) not null 				
cost_of_repairing integer(255) not null				
nature of repair/defect varchar(255) not null				
warrenty enum('yes','no')	
primary key(id)
foreign key(asset_id) references assests(id)
				
				
				
